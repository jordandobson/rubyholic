<% 
  # Change Arrow and Toggle
  if @sort_order == "desc"
    toggle_arrow = "&#9660;"
    toggle_sort = "asc"
  else
    toggle_arrow = "&#9650;"
    toggle_sort = "desc"
  end
%>
<div id="pgHome">
  <hr size="1" />
  <div id="head">
    <h2><!--Ruby Groups - --><%= @sort_order %> - <%= @order_by %></h2>
    <menu>
      <li><strong>Sort by</strong></li>
      <li>
        <%= link_to toggle_arrow, :controller => 'groups', :action => "index", :s => toggle_sort, :by => @order_by %>
      </li>
      <li>
        <% if @order_by == 'locations' -%><b><% end -%>
        <%= link_to "Location",    :controller => 'groups', :action => "index", :s => 'asc',      :by => "locations" %>
        <% if @order_by == 'locations' -%></b><% end -%>
      </li>
      <li>
        <% if @order_by == 'groups' -%><b><% end -%>
        <%= link_to "Group",       :controller => 'groups', :action => "index", :s => 'asc',      :by => "groups" %>
        <% if @order_by == 'groups' -%></b><% end -%>
      </li>
    </menu>
  </div>
  <ol>
  <% for group in @groups -%>
    <li><%= group.location.name %><%= link_to group.name, group, :title => group.description %></li>
  <% end -%>
  </ol>
  <hr size="1" />
  <ul>
    <li><%= link_to 'Add Group', new_group_path %></li>
    <li><input disabled="disabled" type="button" value="Back" /></li>
    <li><input disabled="disabled" type="button" value="Next" /></li>
  </ul>
</div>