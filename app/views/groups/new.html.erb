<div id="groupForm" class="add">
  <hr size="1" />
  <div id="head">
    <h2>Add A Group</h2>
    <menu>
      <li><%= link_to "Cancel", groups_path %></li>
    </menu>
  </div>

  <% form_for(@group) do |f| -%>
  <div id="body" class="new">
      <div id="error"><%= f.error_messages -%></div>
      <div>
        <%= f.label :name, "Group Name" %>
        <br />
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :url, "Group Site" %>
        <br />
        <%= f.text_field :url, :value => "http://" %>
      </div>
      <div class="desc">
        <%= f.label :description, "Tell us about the group" %>
        <br />
        <%= f.text_area :description %>
      </div>
      <div style="clear:both;"></div>
  </div>
  <hr size="1" />
  <ul>
    <li><%= f.submit "âœš Add Group" %></li>
  </ul>
    <% end -%>
</div>